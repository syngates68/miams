{% extends "template.html.twig" %}

{% block content %}
    <div class="list-container">
        <div class="list-container__header">
            <div class="list-header">
                <h1>Liste des plats</h1>
                <p class="subtitle">
                    Trouvez votre bonheur parmis les plats<br/> suivants, près de chez vous !
                </p>
                <a class="button button-secondary" href="{{ BASEURL }}plats/ajouter">Proposer un plat</a>
            </div>
        </div>
        <div class="list-container__list">
            <div class="dishes-list">
                {% for p in plats %}
                    <div class="card">
                        <div class="card-img-top">
                            <img src="{{ BASELINK ~ p.photo_plat }}" alt="">
                        </div>
                        <div class="card-body">
                            <div class="avatar-block">
                                <img src="{{ BASELINK  }}assets/{{ p.photo_vendeur }}" alt="Photo de profil de {{ p.vendeur }}">
                            </div>
                            <div class="card-body__informations">
                                <div class="card-body__informations-top">
                                    <div class="left-bloc">
                                        <div class="title"><a href="{{ BASEURL }}plats/{{ p.slug ~ '-' ~ p.id_plat }}">{{ p.nom_plat }}</a></div>
                                        <div class="published-by">Par {{ p.vendeur }}</div>
                                        <div class="published-at">{{ p.date_publication|date('d/m/Y') }}</div>
                                    </div>
                                    <div class="price">
                                        <span class="value">{{ p.prix }}</span>
                                        <span class="euro">€</span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a class="button button-primary-outline" href="{{ BASEURL }}plats/{{ p.slug ~ '-' ~ p.id_plat }}">En savoir plus</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}